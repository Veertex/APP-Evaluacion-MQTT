<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="370dp"
    android:layout_height="wrap_content"
    android:background="#A85050">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="370dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/operacion"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:autoText="false"
                android:background="#EFEFCC"
                android:text="TextView"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/fecha"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="#EFEFCC"
                android:text="TextView"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/monto"
                app:layout_constraintStart_toEndOf="@+id/operacion"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/monto"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:background="#EFEFCC"
                android:gravity="right"
                android:text="TextView"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fecha"
                tools:layout_editor_absoluteY="0dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>